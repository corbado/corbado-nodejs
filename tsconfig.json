{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Corbado NodeJS",
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "module": "esnext",
    "target": "es2020",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "esm",
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*"]
    },

    "declaration": true
  },
  "include": ["src/**/*"]
}
